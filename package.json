    "merge-graphql-schemas": "^1.7.3",
    "morgan": "^1.9.1",
    "natural-orderby": "^2.0.3",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3",
    "winston": "^3.2.1",
    "xml2js": "^0.4.22",
    "yup": "^0.27.0"
  }
}
